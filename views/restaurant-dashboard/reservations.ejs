<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Make a Reservation</title>
  <link rel="stylesheet" href="/css/reservations.css" />
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    .menu-section {
      margin-top: 25px;
      text-align: center;
    }

    .add-menu-btn {
      background: #5b6ef5;
      color: #fff;
      border: none;
      border-radius: 8px;
      padding: 10px 20px;
      cursor: pointer;
      font-weight: 500;
      transition: all 0.3s;
    }

    .add-menu-btn:hover {
      background: #4a5dd0;
      transform: translateY(-2px);
    }

    .menu-grid {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
      margin-top: 20px;
    }

    .menu-card {
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
      width: 220px;
      overflow: hidden;
      transition: all 0.3s ease;
    }

    .menu-card:hover {
      transform: translateY(-5px);
    }

    .menu-card img {
      width: 100%;
      height: 140px;
      object-fit: cover;
    }

    .menu-details {
      padding: 10px;
      text-align: center;
    }

    .menu-details h4 {
      margin: 6px 0;
      font-size: 1rem;
      color: #333;
    }

    .menu-details p {
      margin: 4px 0;
      font-size: 0.9rem;
      color: #666;
    }

    .menu-select {
      margin-top: 6px;
    }

    .menu-select input {
      accent-color: #5b6ef5;
      transform: scale(1.2);
    }

    .hidden {
      display: none;
    }
  </style>
</head>

<body>
  <div class="reservation-container">
    <h1>Make a Reservation</h1>

    <% if (errorMessage) { %>
      <div class="error-message"><%= errorMessage %></div>
    <% } %>
    <% if (successMessage) { %>
      <div class="success-message"><%= successMessage %></div>
    <% } %>

    <form action="/reservations/make-reservation" method="POST" class="reservation-form">
      <input type="hidden" name="restaurantId" value="<%= restaurant._id %>" />

      <label for="reservationDate">Date *</label>
      <input type="date" id="reservationDate" name="reservationDate" required
        min="<%= new Date().toISOString().split('T')[0] %>" />

      <label for="reservationTime">Time *</label>
      <select id="reservationTime" name="reservationTime" required>
        <option value="">Select time</option>
        <% ['10:00 AM','12:00 PM','2:00 PM','6:00 PM','8:00 PM'].forEach(time => { %>
          <option value="<%= time %>"><%= time %></option>
        <% }) %>
      </select>

      <label for="guestCount">Guests *</label>
      <select id="guestCount" name="guestCount" required>
        <option value="">Select guests</option>
        <% for(let i=1; i<=10; i++) { %>
          <option value="<%= i %>"><%= i %></option>
        <% } %>
      </select>

      <label for="guestName">Your Name *</label>
      <input type="text" id="guestName" name="guestName" placeholder="Enter your name" required />

      <label for="guestPhone">Phone Number *</label>
      <input type="tel" id="guestPhone" name="guestPhone" placeholder="Enter your phone number" required />

      <label for="specialRequests">Special Requests (Optional)</label>
      <textarea id="specialRequests" name="specialRequests" rows="3"
        placeholder="Any special requests..."></textarea>

      <!-- MENU SECTION -->
      <div class="menu-section">
        <button type="button" class="add-menu-btn" id="toggleMenuBtn">üçΩÔ∏è Add Menu Items</button>

        <div id="menuGrid" class="menu-grid hidden">
          <% if (menuItems && menuItems.length > 0) { %>
            <% menuItems.forEach(item => { %>
              <div class="menu-card">
                <img src="<%= item.image ? item.image : '/images/default-food.jpg' %>" alt="<%= item.dishName %>" />
                <div class="menu-details">
                  <h4><%= item.dishName %></h4>
                  <p><%= item.cuisine %> | <%= item.type %></p>
                  <p><strong>‚Çπ<%= item.price %></strong></p>
                  <div class="menu-select">
                    <input type="checkbox" name="menuItems" value="<%= item._id %>" />
                  </div>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <p style="margin-top:15px;">No menu items available yet.</p>
          <% } %>
        </div>
      </div>

      <button type="submit" class="btn-submit">Book Now</button>
    </form>
  </div>

  <script>
    document.getElementById("toggleMenuBtn").addEventListener("click", () => {
      const grid = document.getElementById("menuGrid");
      grid.classList.toggle("hidden");
    });
  </script>
</body>
</html>
