<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password - QuickSEAT</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/auth.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }

        .auth-section {
            margin-top: 4rem;
            padding: 60px 20px;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .auth-container {
            max-width: 520px;
            width: 100%;
            background: white;
            border-radius: 24px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            padding: 50px 45px;
        }

        .auth-header {
            text-align: center;
            margin-bottom: 35px;
        }

        .auth-header h1 {
            font-size: 2.5rem;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 12px;
            font-weight: 900;
        }

        .auth-form {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .form-group label {
            font-weight: 600;
            color: #2d3748;
        }

        .form-group input {
            padding: 15px 18px;
            border: 2px solid #e2e8f0;
            border-radius: 14px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-group input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.15);
        }

        .password-strength {
            display: flex;
            gap: 4px;
            margin-top: 8px;
        }

        .strength-bar {
            flex: 1;
            height: 4px;
            background: #e2e8f0;
            border-radius: 2px;
        }

        .strength-bar.weak { background: #fc8181; }
        .strength-bar.fair { background: #f6ad55; }
        .strength-bar.good { background: #68d391; }
        .strength-bar.strong { background: #38a169; }

        .btn-auth {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 16px 0;
            border: none;
            border-radius: 14px;
            font-size: 1.1rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 12px;
        }

        .btn-auth:hover {
            transform: translateY(-3px);
        }

        .btn-auth:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .alert {
            padding: 14px 18px;
            border-radius: 12px;
            margin-bottom: 24px;
            font-weight: 500;
        }

        .alert-error {
            background: #fee;
            color: #c53030;
            border: 2px solid #fc8181;
        }
    </style>
</head>
<body>
    <%- include('../includes/navbar') %>

    <section class="auth-section">
        <div class="auth-container">
            <div class="auth-header">
                <h1>ðŸ”‘ Set New Password</h1>
            </div>

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-error"><%= error %></div>
            <% } %>

            <form id="resetPasswordForm" class="auth-form">
                <div class="form-group">
                    <label for="newPassword">New Password <span style="color: #e74c3c;">*</span></label>
                    <input 
                        type="password" 
                        id="newPassword" 
                        name="newPassword" 
                        placeholder="Enter your new password"
                        required
                        minlength="6"
                    >
                    <div class="password-strength" id="strengthIndicator"></div>
                </div>

                <div class="form-group">
                    <label for="confirmPassword">Confirm Password <span style="color: #e74c3c;">*</span></label>
                    <input 
                        type="password" 
                        id="confirmPassword" 
                        name="confirmPassword" 
                        placeholder="Confirm your password"
                        required
                        minlength="6"
                    >
                </div>

                <input type="hidden" id="token" value="<%= token %>">

                <button type="submit" class="btn-auth" id="submitBtn">
                    Reset Password
                </button>
            </form>
        </div>
    </section>

    <%- include('../includes/footer') %>

    <script>
        const passwordInput = document.getElementById('newPassword');
        const strengthIndicator = document.getElementById('strengthIndicator');

        passwordInput.addEventListener('input', () => {
            const password = passwordInput.value;
            let strength = 0;

            if (password.length >= 6) strength++;
            if (password.length >= 8) strength++;
            if (/[A-Z]/.test(password) && /[a-z]/.test(password)) strength++;
            if (/[0-9]/.test(password)) strength++;
            if (/[^A-Za-z0-9]/.test(password)) strength++;

            strengthIndicator.innerHTML = '';
            const bars = Math.min(strength, 4);
            const labels = ['weak', 'fair', 'good', 'strong'];

            for (let i = 0; i < 4; i++) {
                const bar = document.createElement('div');
                bar.className = 'strength-bar';
                if (i < bars) bar.classList.add(labels[bars - 1]);
                strengthIndicator.appendChild(bar);
            }
        });

        document.getElementById('resetPasswordForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const token = document.getElementById('token').value;
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const submitBtn = document.getElementById('submitBtn');

            if (newPassword !== confirmPassword) {
                alert('Passwords do not match!');
                return;
            }

            submitBtn.disabled = true;

            try {
                const res = await fetch('/auth/reset-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ token, newPassword, confirmPassword })
                });

                const data = await res.json();

                if (res.ok) {
                    alert('âœ… Password reset successfully! Redirecting to login...');
                    window.location.href = data.redirect || '/login/user';
                } else {
                    alert('Error: ' + data.error);
                }
            } catch (error) {
                alert('Error resetting password');
            } finally {
                submitBtn.disabled = false;
            }
        });
    </script>
</body>
</html>