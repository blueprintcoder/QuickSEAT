  <script>
    if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
            navigator.serviceWorker.register('/service-worker.js')
                .then(registration => {
                    console.log('ServiceWorker registration successful with scope: ', registration.scope);
                }, err => {
                    console.log('ServiceWorker registration failed: ', err);
                });
        });
    }

  // Anime.js Card Animation
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        anime({
          targets: entry.target,
          opacity: [0, 1],
          translateY: [50, 0],
          delay: anime.stagger(100)
        });
        observer.unobserve(entry.target);
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('.restaurant-card').forEach(card => {
    observer.observe(card);
  });

  const sortByDropdown = document.getElementById('sort-by');
  const restaurantsGrid = document.querySelector('.restaurants-grid');
  if(restaurantsGrid) {
    let restaurantCards = Array.from(restaurantsGrid.querySelectorAll('.restaurant-card'));

    if(sortByDropdown) {
        sortByDropdown.addEventListener('change', (e) => {
            const sortBy = e.target.value;

            const sortedCards = restaurantCards.sort((a, b) => {
                const aValue = a.dataset[sortBy];
                const bValue = b.dataset[sortBy];

                if (sortBy === 'name') {
                    return aValue.localeCompare(bValue);
                } else {
                    return bValue - aValue; // For price and rating, higher is better
                }
            });

            // Re-append sorted cards
            sortedCards.forEach(card => restaurantsGrid.appendChild(card));
            // After sorting, we need to re-apply the load more logic
            applyLoadMore();
        });
    }

    const loadMoreBtn = document.getElementById('load-more-btn');
    const cardsPerLoad = 6;
    let visibleCards = 0;

    function applyLoadMore() {
        restaurantCards = Array.from(restaurantsGrid.querySelectorAll('.restaurant-card'));
        visibleCards = cardsPerLoad;

        restaurantCards.forEach((card, index) => {
            if (index < visibleCards) {
                card.style.display = 'block';
            } else {
                card.style.display = 'none';
            }
        });

        if (restaurantCards.length <= visibleCards) {
            if(loadMoreBtn) loadMoreBtn.style.display = 'none';
        } else {
            if(loadMoreBtn) loadMoreBtn.style.display = 'block';
        }
    }

    if(loadMoreBtn) {
        loadMoreBtn.addEventListener('click', () => {
            const nextVisibleCards = visibleCards + cardsPerLoad;
            restaurantCards.forEach((card, index) => {
                if (index >= visibleCards && index < nextVisibleCards) {
                    card.style.display = 'block';
                }
            });
            visibleCards = nextVisibleCards;

            if (visibleCards >= restaurantCards.length) {
                loadMoreBtn.style.display = 'none';
            }
        });
    }

    const gridViewBtn = document.getElementById('grid-view-btn');
    const listViewBtn = document.getElementById('list-view-btn');

    if(gridViewBtn && listViewBtn && restaurantsGrid) {
        gridViewBtn.addEventListener('click', () => {
            restaurantsGrid.classList.remove('list-view');
            gridViewBtn.classList.add('active');
            listViewBtn.classList.remove('active');
            applyLoadMore(); // Re-apply load more for grid view
        });

        listViewBtn.addEventListener('click', () => {
            restaurantsGrid.classList.add('list-view');
            listViewBtn.classList.add('active');
            gridViewBtn.classList.remove('active');
            applyLoadMore(); // Re-apply load more for list view
        });
    }

    const modal = document.getElementById('quick-view-modal');
    const closeModalBtn = document.querySelector('.close-modal');
    const modalBody = document.getElementById('modal-body');

    document.querySelectorAll('.btn-quick-view').forEach(button => {
        button.addEventListener('click', (e) => {
            const card = e.target.closest('.restaurant-card');
            const name = card.querySelector('.restaurant-name').textContent;
            const address = card.querySelector('.restaurant-address').textContent;
            const details = card.querySelector('.restaurant-details').innerHTML;
            const imageSrc = card.querySelector('.restaurant-img').src;

            if(modalBody) {
                modalBody.innerHTML = `
                    <img src="${imageSrc}" style="width: 100%; height: 250px; object-fit: cover; border-radius: 8px;">
                    <h2>${name}</h2>
                    <p>${address}</p>
                    <div>${details}</div>
                    <a href="${card.querySelector('.btn-view').href}" class="btn-view" style="margin-top: 15px;">View Full Details & Book</a>
                `;
            }
            if(modal) modal.style.display = 'block';
        });
    });

    if(closeModalBtn) {
        closeModalBtn.addEventListener('click', () => {
            if(modal) modal.style.display = 'none';
        });
    }

    window.addEventListener('click', (e) => {
        if (e.target == modal) {
            if(modal) modal.style.display = 'none';
        }
    });

    function updateWishlistIcons() {
        const wishlist = JSON.parse(localStorage.getItem('wishlist')) || [];
        document.querySelectorAll('.restaurant-card').forEach(card => {
            const restaurantId = card.dataset.id;
            const icon = card.querySelector('.wishlist-icon i');
            if(icon) {
                if (wishlist.includes(restaurantId)) {
                    icon.classList.remove('far');
                    icon.classList.add('fas');
                } else {
                    icon.classList.remove('fas');
                    icon.classList.add('far');
                }
            }
        });
    }

    document.querySelectorAll('.wishlist-icon').forEach(button => {
        button.addEventListener('click', (e) => {
            e.stopPropagation(); // prevent card click
            const card = e.target.closest('.restaurant-card');
            const restaurantId = card.dataset.id;
            let wishlist = JSON.parse(localStorage.getItem('wishlist')) || [];

            if (wishlist.includes(restaurantId)) {
                // Remove from wishlist
                wishlist = wishlist.filter(id => id !== restaurantId);
            } else {
                // Add to wishlist
                wishlist.push(restaurantId);
            }

            localStorage.setItem('wishlist', JSON.stringify(wishlist));
            updateWishlistIcons();
        });
    });

    const filterModal = document.getElementById('filter-modal');
    const openFilterBtn = document.getElementById('open-filter-modal-btn');
    const closeFilterBtn = document.querySelector('.close-modal-filter');
