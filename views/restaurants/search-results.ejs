    const body = document.body;

    function applyTheme(theme) {
        body.classList.remove('theme-autumn'); // Remove all theme classes
        if (theme !== 'default') {
            body.classList.add(`theme-${theme}`);
        }
        localStorage.setItem('theme', theme);
    }

    if(themeSelect) {
        themeSelect.addEventListener('change', (e) => {
            applyTheme(e.target.value);
        });
    }

    // Apply saved or seasonal theme on load
    const savedTheme = localStorage.getItem('theme');
    if (savedTheme) {
        applyTheme(savedTheme);
        if(themeSelect) themeSelect.value = savedTheme;
    } else {
        const month = new Date().getMonth();
        if (month >= 8 && month <= 10) { // Sep, Oct, Nov
            applyTheme('autumn');
            if(themeSelect) themeSelect.value = 'autumn';
        }
    }

    const fontIncreaseBtn = document.getElementById('font-increase');
    const fontDecreaseBtn = document.getElementById('font-decrease');
    const contrastToggleBtn = document.getElementById('contrast-toggle');
    const accessibilityBody = document.body;
    let currentFontSize = 1;

    function setFontSize(size) {
        accessibilityBody.style.fontSize = `${size}rem`;
        localStorage.setItem('fontSize', size);
    }

    if(fontIncreaseBtn) {
        fontIncreaseBtn.addEventListener('click', () => {
            currentFontSize = Math.min(currentFontSize + 0.1, 1.5); // Cap max size
            setFontSize(currentFontSize);
        });
    }

    if(fontDecreaseBtn) {
        fontDecreaseBtn.addEventListener('click', () => {
            currentFontSize = Math.max(currentFontSize - 0.1, 0.8); // Cap min size
            setFontSize(currentFontSize);
        });
    }
    
    if(contrastToggleBtn) {
        contrastToggleBtn.addEventListener('click', () => {
            accessibilityBody.classList.toggle('high-contrast');
            localStorage.setItem('highContrast', accessibilityBody.classList.contains('high-contrast'));
        });
    }

    // On load, apply saved accessibility settings
    const savedFontSize = localStorage.getItem('fontSize');
    if (savedFontSize) {
        currentFontSize = parseFloat(savedFontSize);
        accessibilityBody.style.fontSize = `${currentFontSize}rem`;
    }
    if (localStorage.getItem('highContrast') === 'true') {
        accessibilityBody.classList.add('high-contrast');
    }

    const translations = {
        en: {
            deals_offers: 'Deals & Offers',
            recently_viewed: 'Recently Viewed',
            search_results: 'Search Results',
        },
        es: {
            deals_offers: 'Ofertas y Descuentos',
            recently_viewed: 'Visto Recientemente',
            search_results: 'Resultados de Bsqueda',
        }
    };

    const langSelect = document.getElementById('language-select');
    
    function setLanguage(lang) {
        document.querySelectorAll('[data-key]').forEach(el => {
            const key = el.dataset.key;
            if (translations[lang] && translations[lang][key]) {
                el.textContent = translations[lang][key];
            }
        });
        localStorage.setItem('language', lang);
    }

    if(langSelect) {
        langSelect.addEventListener('change', (e) => {
            setLanguage(e.target.value);
        });
    }

    // On load, apply saved language
    const savedLang = localStorage.getItem('language') || 'en';
    setLanguage(savedLang);
    if(langSelect) langSelect.value = savedLang;
    
    const subscribeBtn = document.getElementById('subscribe-btn');

    if(subscribeBtn) {
        subscribeBtn.addEventListener('click', () => {
            if ('Notification' in window && 'serviceWorker' in navigator) {
                Notification.requestPermission().then(permission => {
                    if (permission === 'granted') {
                        console.log('Notification permission granted.');
                        navigator.serviceWorker.ready.then(registration => {
                            // This VAPID key would be generated by your server
                            const vapidPublicKey = 'BNo5Yp_3D_...'; // Replace with your key
                            registration.pushManager.subscribe({
                                userVisibleOnly: true,
                                applicationServerKey: vapidPublicKey
                            }).then(subscription => {
                                console.log('User is subscribed:', JSON.stringify(subscription));
                                // In a real app, send this subscription object to your server
                            }).catch(err => {
                                console.error('Failed to subscribe the user: ', err);
                            });
                        });
                    } else {
                        console.log('Notification permission denied.');
                    }
                });
            }
        });
    }

    // Initial load
    loadDeals();
    generateStarRating();
    updateWishlistIcons();
    applyLoadMore();
  }
