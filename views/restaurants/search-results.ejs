    const mapViewBtn = document.getElementById('map-view-btn');
    const restaurantsGridForMap = document.querySelector('.restaurants-grid');
    const mapContainer = document.getElementById('map-container');
    let map = null; // To hold the map instance

    if(mapViewBtn) {
        mapViewBtn.addEventListener('click', () => {
            if (mapContainer.style.display === 'none') {
                // Show map
                if(restaurantsGridForMap) restaurantsGridForMap.style.display = 'none';
                if(mapContainer) mapContainer.style.display = 'block';
                mapViewBtn.textContent = 'Grid View';

                if (!map) { // Initialize map only once
                    map = L.map('map-container').setView([28.6139, 77.2090], 13); // Default view Delhi

                    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
                    }).addTo(map);

                    const restaurantCards = document.querySelectorAll('.restaurant-card');
                    const locations = [];
                    restaurantCards.forEach(card => {
                        const lat = card.dataset.lat;
                        const lon = card.dataset.lon;
                        const name = card.dataset.name;
                        if(lat && lon && lat != 0 && lon != 0) {
                            L.marker([lat, lon]).addTo(map)
                                .bindPopup(`<b>${name}</b>`);
                            locations.push([lat, lon]);
                        }
                    });

                    if (locations.length > 0) {
                        map.fitBounds(locations);
                    }
                }
            } else {
                // Show grid
                if(mapContainer) mapContainer.style.display = 'none';
                if(restaurantsGridForMap) restaurantsGridForMap.style.display = document.querySelector('.view-toggle #list-view-btn').classList.contains('active') ? 'block' : 'grid';
                mapViewBtn.textContent = 'Map View';
            }
        });
    }

    const shareModal = document.getElementById('share-modal');
    const closeShareBtn = document.querySelector('.close-modal-share');

    document.querySelectorAll('.btn-share').forEach(button => {
        button.addEventListener('click', (e) => {
            e.stopPropagation();
            const card = e.target.closest('.restaurant-card');
            const restaurantId = card.dataset.id;
            const restaurantURL = `${window.location.origin}/restaurants/${restaurantId}`;
            
            if(shareModal) {
                // Set links
                shareModal.querySelector('.share-link.facebook').href = `https://www.facebook.com/sharer/sharer.php?u=${restaurantURL}`;
                shareModal.querySelector('.share-link.twitter').href = `https://twitter.com/intent/tweet?url=${restaurantURL}`;
                shareModal.querySelector('.share-link.whatsapp').href = `https://api.whatsapp.com/send?text=${restaurantURL}`;
                shareModal.querySelector('#share-link-input').value = restaurantURL;

                shareModal.style.display = 'block';
