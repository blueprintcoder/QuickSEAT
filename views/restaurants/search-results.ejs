    const chatInput = document.getElementById('chat-input');
    const chatSendBtn = document.getElementById('chat-send-btn');

    if(chatToggleBtn && chatWindow) {
        const responses = {
            "booking": "You can book a table by going to the restaurant's page and selecting a date and time.",
            "default": "Sorry, I didn't understand. Can you ask another way? Try asking about 'booking'."
        };

        function addMessage(text, sender) {
            if(!chatMessages) return;
            const message = document.createElement('div');
            message.className = `chat-message ${sender}`;
            message.textContent = text;
            chatMessages.appendChild(message);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        chatToggleBtn.addEventListener('click', () => {
            chatWindow.classList.toggle('hidden');
            if(!chatWindow.classList.contains('hidden') && chatMessages.children.length === 0) {
                 setTimeout(() => addMessage("Hi there! How can I help you?", 'bot'), 500);
            }
        });

        function handleChat() {
            const userInput = chatInput.value.trim();
            if (!userInput) return;
            addMessage(userInput, 'user');
            chatInput.value = '';

            setTimeout(() => {
                let botResponse = responses.default;
                if (userInput.toLowerCase().includes('booking')) {
                    botResponse = responses.booking;
                }
                addMessage(botResponse, 'bot');
            }, 1000);
        }

        if(chatSendBtn) chatSendBtn.addEventListener('click', handleChat);
        if(chatInput) chatInput.addEventListener('keypress', (e) => {
            if(e.key === 'Enter') handleChat();
        });
    }

