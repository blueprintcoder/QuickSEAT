    function loadRecentlyViewed() {
    
            const recentlyViewed = JSON.parse(localStorage.getItem('recentlyViewed')) || [];
    
            const grid = document.getElementById('recently-viewed-grid');
    
            const recentlyViewedSection = document.querySelector('.recently-viewed-section');
    
            if (grid && recentlyViewed.length > 0) {
    
                if(recentlyViewedSection) recentlyViewedSection.style.display = 'block';
    
                grid.innerHTML = ''; // Clear existing
    
                recentlyViewed.forEach(item => {
    
                    grid.innerHTML += `
    
                        <div class="restaurant-card-small">
    
                            <a href="/restaurants/${item.id}" style="text-decoration: none; color: inherit;">
    
                                <div class="restaurant-image">
    
                                    <img src="${item.image}" class="restaurant-img">
    
                                </div>
    
                                <div class="restaurant-info">
    
                                    <h4 class="restaurant-name">${item.name}</h4>
    
                                </div>
    
                            </a>
    
                        </div>
    
                    `;
    
                });
    
            } else {
    
                if(recentlyViewedSection) recentlyViewedSection.style.display = 'none';
    
            }
    
        }
    
    
    
        function addToRecentlyViewed(restaurantData) {
    
            let recentlyViewed = JSON.parse(localStorage.getItem('recentlyViewed')) || [];
    
            // Avoid duplicates
    
            recentlyViewed = recentlyViewed.filter(item => item.id !== restaurantData.id);
    
            // Add to the beginning
    
            recentlyViewed.unshift(restaurantData);
    
            // Limit to 5 items
    
            recentlyViewed = recentlyViewed.slice(0, 5);
    
            localStorage.setItem('recentlyViewed', JSON.stringify(recentlyViewed));
    
            loadRecentlyViewed();
    
        }
    
    
    
        document.querySelectorAll('.btn-view, .btn-quick-view').forEach(button => {
    
            button.addEventListener('click', (e) => {
    
                const card = e.target.closest('.restaurant-card');
    
                const restaurantData = {
    
                    id: card.dataset.id,
    
                    name: card.dataset.name,
    
                    image: card.querySelector('.restaurant-img').src
    
                };
    
                addToRecentlyViewed(restaurantData);
    
            });
    
        });
    
    
    
        const compareBar = document.getElementById('compare-bar');
            const compareItemsContainer = document.getElementById('compare-items');
            const compareModal = document.getElementById('compare-modal');
            const compareNowBtn = document.getElementById('compare-now-btn');
            const closeCompareBtn = document.querySelector('.close-modal-compare');
            let itemsToCompare = [];
        
            function updateCompareBar() {
                if(!compareBar || !compareItemsContainer) return;
                if (itemsToCompare.length > 0) {
                    compareBar.style.display = 'flex';
                    compareItemsContainer.innerHTML = '';
                    itemsToCompare.forEach(item => {
                        compareItemsContainer.innerHTML += `
                            <div class="compare-item" data-id="${item.id}">
                                <span>${item.name}</span>
                                <span class="remove-compare" style="cursor: pointer; margin-left: 5px;">&times;</span>
                            </div>
                        `;
                    });
                } else {
                    compareBar.style.display = 'none';
                }
            }
        
            document.querySelectorAll('.compare-checkbox').forEach(checkbox => {
                checkbox.addEventListener('change', (e) => {
                    const card = e.target.closest('.restaurant-card');
                    if(!card) return;
                    const item = { id: card.dataset.id, name: card.dataset.name };
        
                    if (e.target.checked) {
                        if(itemsToCompare.length < 3) {
                            itemsToCompare.push(item);
                        } else {
                            alert('You can only compare up to 3 restaurants.');
                            e.target.checked = false;
                        }
                    } else {
                        itemsToCompare = itemsToCompare.filter(i => i.id !== item.id);
                    }
                    updateCompareBar();
                });
            });
        
            if(compareBar) {
                compareBar.addEventListener('click', (e) => {
                    if (e.target.classList.contains('remove-compare')) {
                        const id = e.target.parentElement.dataset.id;
                        itemsToCompare = itemsToCompare.filter(i => i.id !== id);
                        const checkbox = document.querySelector(`.restaurant-card[data-id="${id}"] .compare-checkbox`);
                        if(checkbox) checkbox.checked = false;
                        updateCompareBar();
                    }
                });
            }
        
            if(compareNowBtn) {
                compareNowBtn.addEventListener('click', () => {
                    const container = document.getElementById('compare-table-container');
                    if(!container || itemsToCompare.length === 0) return;
                    
                    let table = '<table><thead><tr><th>Feature</th>';
                    itemsToCompare.forEach(item => {
                        table += `<th>${item.name}</th>`;
                    });
                    table += '</tr></thead><tbody>';
        
                    const features = ['rating', 'price', 'cuisine'];
                    features.forEach(feature => {
                        table += `<tr><td>${feature.charAt(0).toUpperCase() + feature.slice(1)}</td>`;
                        itemsToCompare.forEach(item => {
                            const card = document.querySelector(`.restaurant-card[data-id="${item.id}"]`);
                            table += `<td>${card ? card.dataset[feature] : 'N/A'}</td>`;
                        });
                        table += '</tr>';
                    });
        
                    table += '</tbody></table>';
                    container.innerHTML = table;
                    if(compareModal) compareModal.style.display = 'block';
                });
            }
        
            if(closeCompareBtn) {
                closeCompareBtn.addEventListener('click', () => {
                    if(compareModal) compareModal.style.display = 'none';
                });
            }
        
            function generateStarRating(rating, container) {
        
                    if(!container) return;
        
                    container.innerHTML = '';
        
                    const fullStars = Math.floor(rating);
        
                    const halfStar = rating % 1 >= 0.5;
        
                    for (let i = 0; i < 5; i++) {
        
                        if (i < fullStars) {
        
                            container.innerHTML += '<i class="fas fa-star"></i>';
        
                        } else if (i === fullStars && halfStar) {
        
                            container.innerHTML += '<i class="fas fa-star-half-alt"></i>';
        
                        } else {
        
                            container.innerHTML += '<i class="far fa-star"></i>';
        
                        }
        
                    }
        
                }
        
            
        
                document.querySelectorAll('.restaurant-card').forEach(card => {
        
                    const rating = parseFloat(card.dataset.rating);
        
                    const starContainer = card.querySelector('.star-rating');
        
                    generateStarRating(rating, starContainer);
        
                });
        
            
        
