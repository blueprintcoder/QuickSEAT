<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking Confirmation - QuickSEAT</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../includes/navbar') %>

    <section class="booking-confirmation-section">
        <div class="container">
            <div class="confirmation-wrapper">
                <!-- Success Icon Animation -->
                <div class="success-icon">
                    <div class="success-checkmark">
                        <div class="check-icon">
                            <span class="icon-line line-tip"></span>
                            <span class="icon-line line-long"></span>
                            <div class="icon-circle"></div>
                            <div class="icon-fix"></div>
                        </div>
                    </div>
                </div>

                <!-- Confirmation Message -->
                <h1 class="confirmation-title">Booking Request Sent!</h1>
                <p class="confirmation-subtitle">Your reservation request has been submitted successfully</p>

                <!-- Booking Details Card -->
                <div class="booking-details-card">
                    <h2>Reservation Details</h2>

                    <div class="detail-row">
                        <span class="detail-label">ğŸ½ï¸ Restaurant:</span>
                        <span class="detail-value"><%= booking.restaurantName %></span>
                    </div>

                    <div class="detail-row">
                        <span class="detail-label">ğŸ‘¤ Name:</span>
                        <span class="detail-value"><%= booking.customerName %></span>
                    </div>

                    <div class="detail-row">
                        <span class="detail-label">ğŸ“… Date:</span>
                        <span class="detail-value"><%= booking.date %></span>
                    </div>

                    <div class="detail-row">
                        <span class="detail-label">ğŸ• Time:</span>
                        <span class="detail-value"><%= booking.time %></span>
                    </div>

                    <div class="detail-row">
                        <span class="detail-label">ğŸ‘¥ Guests:</span>
                        <span class="detail-value"><%= booking.guests %> <%= booking.guests == 1 ? 'Guest' : 'Guests' %></span>
                    </div>

                    <div class="detail-row">
                        <span class="detail-label">ğŸ“ Phone:</span>
                        <span class="detail-value"><%= booking.phone %></span>
                    </div>

                    <% if (booking.specialRequests && booking.specialRequests.trim() !== '') { %>
                    <div class="detail-row special-requests">
                        <span class="detail-label">ğŸ“ Special Requests:</span>
                        <span class="detail-value"><%= booking.specialRequests %></span>
                    </div>
                    <% } %>

                    <div class="status-badge pending">
                        <span class="status-dot"></span>
                        Status: Pending Approval
                    </div>
                </div>

                <!-- Info Message -->
                <div class="info-message">
                    <div class="info-icon">â„¹ï¸</div>
                    <div class="info-text">
                        <p><strong>What happens next?</strong></p>
                        <p>The restaurant manager will review your booking request and respond within 24 hours. You'll receive a confirmation via phone or email once approved.</p>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="confirmation-actions">
                    <a href="/" class="btn-home">
                        <span class="btn-icon">ğŸ </span>
                        Back to Home
                    </a>
                    <a href="/restaurants/<%= booking.restaurantId %>" class="btn-restaurant">
                        View Restaurant
                    </a>
                </div>

                <!-- Additional Info -->
                <div class="additional-info">
                    <p>Booking Reference: <strong>#<%= booking.bookingId || 'PENDING' %></strong></p>
                    <p class="timestamp">Submitted on <%= new Date().toLocaleString('en-IN', { dateStyle: 'long', timeStyle: 'short' }) %></p>
                </div>
            </div>
        </div>
    </section>

    <%- include('../includes/footer') %>
</body>
</html>