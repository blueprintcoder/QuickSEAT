<!-- Password Setup Modal for NEW Google Users (A1 Scenario) -->
<div id="password-modal" class="password-modal-overlay">
    <div class="password-modal-content">
        <div class="modal-header">
            <h2>Complete Your Account Setup</h2>
            <p>Set a password to access your account from any device</p>
        </div>

        <form id="setPasswordForm" class="password-form">
            <div class="form-group">
                <label for="newPassword">Password</label>
                <input 
                    type="password" 
                    id="newPassword" 
                    class="form-input"
                    placeholder="Enter password (min 6 characters)" 
                    required 
                    minlength="6"
                    autocomplete="new-password"
                />
                <span class="password-hint">At least 6 characters</span>
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input 
                    type="password" 
                    id="confirmPassword" 
                    class="form-input"
                    placeholder="Confirm password" 
                    required 
                    minlength="6"
                    autocomplete="new-password"
                />
            </div>

            <div id="passwordError" class="error-message"></div>

            <button type="submit" class="btn-set-password" id="submitBtn">
                Set Password
            </button>
        </form>

        <div class="modal-footer">
            <p>You can also log in with your Google account anytime</p>
        </div>
    </div>
</div>

<style>
    .password-modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        z-index: 9999;
        justify-content: center;
        align-items: center;
        backdrop-filter: blur(2px);
    }

    .password-modal-overlay.show {
        display: flex !important;
    }

    .password-modal-content {
        background: white;
        border-radius: 16px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        width: 90%;
        max-width: 500px;
        padding: 50px 40px;
        animation: slideUp 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
        max-height: 90vh;
        overflow-y: auto;
    }

    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(100px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .modal-header {
        margin-bottom: 40px;
        text-align: center;
    }

    .modal-header h2 {
        margin: 0 0 12px;
        font-size: 1.8rem;
        font-weight: 700;
        color: #1a1a1a;
    }

    .modal-header p {
        margin: 0;
        color: #666;
        font-size: 0.95rem;
        line-height: 1.5;
    }

    .password-form {
        display: flex;
        flex-direction: column;
        gap: 24px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .form-group label {
        font-weight: 600;
        color: #1a1a1a;
        font-size: 0.95rem;
    }

    .form-input {
        padding: 12px 16px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 1rem;
        font-family: inherit;
        transition: all 0.3s ease;
    }

    .form-input:focus {
        outline: none;
        border-color: #007bff;
        background: #f8faff;
        box-shadow: 0 0 0 4px rgba(0, 123, 255, 0.1);
    }

    .password-hint {
        font-size: 0.85rem;
        color: #999;
        margin-top: 4px;
    }

    .error-message {
        color: #dc3545;
        font-size: 0.9rem;
        padding: 12px;
        background: #ffe6e6;
        border-radius: 6px;
        display: none;
        text-align: center;
        margin: 0 -10px;
    }

    .error-message.show {
        display: block;
    }

    .btn-set-password {
        padding: 14px;
        background: #007bff;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 10px;
    }

    .btn-set-password:hover:not(:disabled) {
        background: #0056b3;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
    }

    .btn-set-password:active:not(:disabled) {
        transform: translateY(0);
    }

    .btn-set-password:disabled {
        background: #ccc;
        cursor: not-allowed;
        opacity: 0.6;
    }

    .modal-footer {
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #e0e0e0;
        text-align: center;
        font-size: 0.9rem;
        color: #999;
    }

    /* Mobile responsiveness */
    @media (max-width: 600px) {
        .password-modal-content {
            width: 95%;
            padding: 40px 25px;
            border-radius: 12px;
        }

        .modal-header h2 {
            font-size: 1.5rem;
        }

        .btn-set-password {
            padding: 12px;
            font-size: 0.95rem;
        }
    }
</style>

<script>
    document.getElementById('setPasswordForm').addEventListener('submit', async (e) => {
        e.preventDefault();

        const password = document.getElementById('newPassword').value;
        const confirmPassword = document.getElementById('confirmPassword').value;
        const errorDiv = document.getElementById('passwordError');
        const submitBtn = document.getElementById('submitBtn');

        // Clear previous error
        errorDiv.classList.remove('show');
        errorDiv.textContent = '';

        // Validation
        if (password !== confirmPassword) {
            errorDiv.textContent = '❌ Passwords do not match!';
            errorDiv.classList.add('show');
            return;
        }

        if (password.length < 6) {
            errorDiv.textContent = '❌ Password must be at least 6 characters';
            errorDiv.classList.add('show');
            return;
        }

        // Disable submit button
        submitBtn.disabled = true;
        submitBtn.textContent = 'Setting Password...';

        try {
            const res = await fetch('/auth/set-password', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ password })
            });

            const data = await res.json();

            if (res.ok && data.success) {
                // Hide modal
                document.getElementById('password-modal').classList.remove('show');
                
                // Show success message (optional)
                alert('✅ Password set successfully! You can now log in with your email and password.');
                
                // Redirect to restaurants
                setTimeout(() => {
                    window.location.href = '/restaurants';
                }, 500);
            } else {
                errorDiv.textContent = '❌ ' + (data.message || 'Error setting password');
                errorDiv.classList.add('show');
                submitBtn.disabled = false;
                submitBtn.textContent = 'Set Password';
            }
        } catch (err) {
            console.error('Error:', err);
            errorDiv.textContent = '❌ Network error. Try again.';
            errorDiv.classList.add('show');
            submitBtn.disabled = false;
            submitBtn.textContent = 'Set Password';
        }
    });
</script>